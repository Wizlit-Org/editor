{
  "name": "@wizlit/editor",
  "version": "0.1.0",
  "description": "A modern editor component library for Next.js and React",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "browser": "dist/index.js",
  "files": [
    "dist"
  ],
  "sideEffects": [
    "**/*.css"
  ],
  "scripts": {
    "build:css": "tailwindcss -i src/styles/globals.css -o dist/styles/globals.css --minify",
    "build": "npm run build:css && tsup src/index.ts --dts --format esm,cjs --clean",
    "dev": "npm run build:css && tsup src/index.ts --dts --format esm,cjs --watch",
    "clean": "rimraf dist",
    "lint": "eslint . --ext .ts,.tsx",
    "format": "prettier --write \"{src,apps,libs}/**/*.ts\"",
    "test": "jest",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "prepare": "npm run build"
  },
  "peerDependencies": {
    "next": "^15.3.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0"
  },
  "devDependencies": {
    "@storybook/addon-essentials": "^8.0.0",
    "@storybook/addon-interactions": "^8.0.0",
    "@storybook/addon-links": "^8.0.0",
    "@storybook/addon-onboarding": "^8.6.12",
    "@storybook/blocks": "^8.0.0",
    "@storybook/builder-vite": "^8.0.0",
    "@storybook/react": "^8.0.0",
    "@storybook/react-vite": "^8.0.0",
    "@storybook/test": "^8.0.0",
    "@tailwindcss/typography": "^0.5.16",
    "@types/node": "^20.0.0",
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "@vitejs/plugin-react": "^4.2.0",
    "autoprefixer": "^10.4.21",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-react": "^7.0.0",
    "eslint-plugin-react-hooks": "^4.0.0",
    "eslint-plugin-storybook": "^0.12.0",
    "jest": "^29.0.0",
    "postcss": "^8.5.3",
    "postcss-cli": "^11.0.1",
    "prettier": "^3.0.0",
    "rimraf": "^5.0.0",
    "storybook": "^8.6.12",
    "tailwindcss": "^3.4.1",
    "tsup": "^8.0.0",
    "typescript": "^5.0.0",
    "vite": "^5.0.0"
  },
  "keywords": [
    "react",
    "nextjs",
    "editor",
    "component-library"
  ],
  "author": "",
  "license": "MIT",
  "eslintConfig": {
    "extends": [
      "plugin:storybook/recommended"
    ]
  },
  "dependencies": {
    "@tiptap/extension-placeholder": "^2.11.7",
    "@tiptap/pm": "^2.11.7",
    "@tiptap/react": "^2.11.7",
    "@tiptap/starter-kit": "^2.11.7"
  }
}
